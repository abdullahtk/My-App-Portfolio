<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:textAllCaps="false"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app1"
        android:textAllCaps="false"
        android:id="@+id/spotifyAppButton"
        android:background="@color/orange"
        android:layout_above="@+id/scoresAppButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="5dp"
        android:onClick="openApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app2"
        android:textAllCaps="false"
        android:id="@+id/scoresAppButton"
        android:background="@color/orange"
        android:layout_above="@+id/libraryAppButton"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="5dp"
        android:onClick="openApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app3"
        android:textAllCaps="false"
        android:id="@+id/libraryAppButton"
        android:background="@color/orange"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="5dp"
        android:onClick="openApp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app4"
        android:textAllCaps="false"
        android:id="@+id/buildItBiggerAppButton"
        android:background="@color/orange"
        android:layout_below="@id/libraryAppButton"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="5dp"
        android:onClick="openApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app5"
        android:textAllCaps="false"
        android:id="@+id/readerAppButton"
        android:background="@color/orange"
        android:layout_below="@id/buildItBiggerAppButton"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="5dp"
        android:onClick="openApp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app6"
        android:textAllCaps="false"
        android:id="@+id/myOwnAppButton"
        android:background="@color/red"
        android:layout_below="@id/readerAppButton"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="5dp"
        android:onClick="openApp"/>
</RelativeLayout>
